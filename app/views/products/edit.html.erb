<h4> Edit Product </h4>
<%= form_tag '/products', method: :patch do  %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{@product.name}", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, "#{@product.description}", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, "#{@product.price}", class: 'form-control' %>
  </div>
<%= submit_tag "Edit product", class: "btn btn-primary" %>
<% end %>