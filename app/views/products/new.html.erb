<h4> Add New Product </h4>
<%= form_tag '/products', method: :post do  %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :sdescription %>
    <%= text_field_tag :description, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, "", class: 'form-control' %>
  </div>
<%= submit_tag "Add product", class: "btn btn-primary" %>
<% end %>