<h3> All Products </h3>

<div class="container">
  <% @products.each do |product| %>
  <div>
    <div>
      <a href="/products/#{product.id}">
      <%= product.name %>
      <p>View Product</p>
      </a>
    </div>
    <div>
      <%= product.price %>
      <%= product.description %>
    </div>
  </div>
  <% end %>
</div>